<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="edu.birzeit.entity.Department" table="DEPARTMENTS">
      <meta attribute="class-description">
         This class contains the departments detail. 
      </meta>
      <id name="id" type="int" column="id">
         <generator class="native"/>
      </id>
      <property name="name" column="name" type="string"/>
      <property name="headOfDepartment" column="headOfDepartment" type="string"/>
      <property name="faculty" column="faculty" type="string"/>
   </class>
</hibernate-mapping>